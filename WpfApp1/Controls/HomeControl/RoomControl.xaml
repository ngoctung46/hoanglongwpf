<UserControl    x:Class="WpfApp1.Controls.HomeControl.RoomControl"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:validations="clr-namespace:WpfApp1.Validations"
                xmlns:local="clr-namespace:WpfApp1.Controls.HomeControl"
                xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                xmlns:system="clr-namespace:System;assembly=mscorlib"
                xmlns:toolkit="http://schemas.microsoft.com/wpf/2008/toolkit"
                mc:Ignorable="d"
                TextElement.Foreground="{DynamicResource MaterialDesignBody}"
                TextElement.FontWeight="Regular"
                TextElement.FontSize="20"
                TextOptions.TextFormattingMode="Ideal"
                TextOptions.TextRenderingMode="Auto"
                Background="{DynamicResource MaterialDesignPaper}"
                FontFamily="{DynamicResource MaterialDesignFont}"
                d:DesignHeight="250" d:DesignWidth="250">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Card.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.CheckBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Flipper.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Popupbox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <materialDesign:DialogHost>
            <materialDesign:DialogHost.DialogContent>
                <StackPanel Margin="16" Width="500" Height="500">
                    <TextBlock>Check In</TextBlock>
                    <TextBox Margin="0 16 0 0" HorizontalAlignment="Stretch"
                             x:Name="CustomerIdTextBox" materialDesign:HintAssist.Hint="Customer's Identification">
                        <TextBox.Text>
                            <Binding Path="Customer.Uuid" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <validations:NotEmptyValidationRule ValidatesOnTargetUpdated="True" />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 16 0 0" x:Name="BirthInfoStackPanel">
                        <DatePicker Width="100" HorizontalAlignment="Left" Margin="0 0 16 0"
                                    materialDesign:HintAssist.Hint="Issue Date"
                                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                    SelectedDate="{Binding Path=Customer.IssueDate}" />

                        <DatePicker Width="100" Margin="0 0 16 0"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                    materialDesign:HintAssist.Hint="Expiry Date">
                            <DatePicker.SelectedDate>
                                <Binding Path="Customer.ExpiryDate">
                                    <Binding.ValidationRules>
                                        <validations:FutureDateValidationRule ValidatesOnTargetUpdated="True" />
                                    </Binding.ValidationRules>
                                </Binding>
                            </DatePicker.SelectedDate>
                        </DatePicker>
                        <ComboBox materialDesign:HintAssist.Hint="Place of Issue"
                                  IsEditable="True"
                                  Text="{Binding Path=Customer.IssuePlace}">
                            <ComboBoxItem>Ho Chi Minh City</ComboBoxItem>
                            <ComboBoxItem>iOS</ComboBoxItem>
                            <ComboBoxItem>Linux</ComboBoxItem>
                            <ComboBoxItem>Windows</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <TextBox Margin="0 16 0 0" HorizontalAlignment="Stretch"
                             x:Name="CustomerNameTextBox" materialDesign:HintAssist.Hint="Customer's Name">
                        <TextBox.Text>
                            <Binding Path="Customer.Name" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <validations:NotEmptyValidationRule ValidatesOnTargetUpdated="True" />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 16 0 0" x:Name="AddressInfoStackPanel">
                        <DatePicker Width="100" HorizontalAlignment="Left"
                                    Margin="0 0 16 0" materialDesign:HintAssist.Hint="Date of Birth"
                                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                        <ComboBox   materialDesign:HintAssist.Hint="Place of Birth"
                                    IsEditable="True"
                                    Margin="0 0 16 0"
                                    SelectedValue="{Binding Path=Customer.BirthPlace}">
                            <ComboBoxItem>Ho Chi Minh City</ComboBoxItem>
                            <ComboBoxItem>iOS</ComboBoxItem>
                            <ComboBoxItem>Linux</ComboBoxItem>
                            <ComboBoxItem>Windows</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                        IsDefault="True"
                                        Margin="0 8 8 0"
                                        Command="materialDesign:DialogHost.CloseDialogCommand">
                            <Button.CommandParameter>
                                <system:Boolean>True</system:Boolean>
                            </Button.CommandParameter>
                            ACCEPT
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                        IsCancel="True"
                                        Margin="0 8 8 0"
                                        Command="materialDesign:DialogHost.CloseDialogCommand">
                            <Button.CommandParameter>
                                <system:Boolean>False</system:Boolean>
                            </Button.CommandParameter>
                            CANCEL
                        </Button>
                    </StackPanel>
                </StackPanel>
            </materialDesign:DialogHost.DialogContent>
            <materialDesign:Card Margin="4 4 0 0" Width="250" Height="200">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <Grid Height="100" HorizontalAlignment="Center" Width="250">
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50" Text="{Binding Room.Number}"></TextBlock>
                    </Grid>
                    <StackPanel Grid.Row="1" Margin="8 24 8 0">
                        <TextBlock TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Room.Description}"></TextBlock>
                    </StackPanel>
                    <materialDesign:ColorZone Mode="PrimaryLight" Grid.Row="2" Effect="{DynamicResource MaterialDesignShadowDepth5}">
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="8">
                            <Button Style="{StaticResource MaterialDesignToolButton}"
                                    Width="30" Padding="2 0 2 0"
                                    materialDesign:RippleAssist.IsCentered="True"
                                    Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}">
                                <materialDesign:PackIcon Kind="Account" />
                            </Button>
                            <materialDesign:PopupBox Style="{StaticResource MaterialDesignToolPopupBox}" Padding="2 0 2 0">
                                <StackPanel>
                                    <Button Content="More" />
                                    <Button Content="Options" />
                                </StackPanel>
                            </materialDesign:PopupBox>
                        </StackPanel>
                    </materialDesign:ColorZone>
                </Grid>
            </materialDesign:Card>
        </materialDesign:DialogHost>
    </Grid>
</UserControl>